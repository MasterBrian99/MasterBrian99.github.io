---
interface Props {
  targetId?: string;
}

const { targetId = "main-content" } = Astro.props;
---

<a
  href={`#${targetId}`}
  class="skip-link sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-50 focus:px-6 focus:py-3 focus:bg-black focus:text-yellow-300 focus:border-4 focus:border-black focus:font-bold focus:shadow-[8px_8px_0px_0px_rgba(0,0,0,1)]"
>
  Skip to main content
</a>

<style>
  .skip-link:focus {
    outline: 4px solid currentColor;
    outline-offset: 2px;
  }
</style>
